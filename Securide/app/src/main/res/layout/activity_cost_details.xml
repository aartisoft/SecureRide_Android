<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:adjustViewBounds="true"
             android:background="@drawable/taxi_bg" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Pick up Point "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Drop Point "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Cab Arrival Time "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Trip Estimated Time "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Cab Number "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Driver Name "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Estimated Cost of The Trip "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filmType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="303, 4th Cross,San Jose"
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productionYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="406, 6th Cross, San Jose"
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/timeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/filmLength"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="05 Min"
                            android:textColor="@color/cost_details_screen_text_color"
                            android:textSize="@dimen/detail_view_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/director"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="30 Min"
                            android:textColor="@color/cost_details_screen_text_color"
                            android:textSize="@dimen/detail_view_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/writer"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="2"
                            android:text="MX123"
                            android:textColor="@color/cost_details_screen_text_color"
                            android:textSize="@dimen/detail_view_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_toRightOf="@+id/timeLayout"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/avathar_msb" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/music"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="4123458712"
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cast"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="$40"
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Accept"
                android:layout_width="@dimen/accept_button_width"
                android:layout_height="45dp"
                android:background="@drawable/accept_bg_rounded"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Accept"/>
            <Button
                android:id="@+id/Reject"
                android:layout_marginLeft="50dp"
                android:layout_width="@dimen/accept_button_width"
                android:layout_height="45dp"
                android:textAllCaps="false"
                android:background="@drawable/reject_bg_rounded"
                android:textColor="@color/white"
                android:text="Reject"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
