<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/left_right_margin"
        android:layout_marginRight="@dimen/left_right_margin"
        android:orientation="vertical">

        <!-- <ImageView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:adjustViewBounds="true"
             android:background="@drawable/taxi_bg" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="Pick up Point "
                android:textColor="@color/cost_details_screen_text_color"
                android:textSize="@dimen/detail_view_text_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/pick_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="303, 4th Cross,San Jose"
                android:textColor="@color/cost_details_screen_text_color"
                android:textSize="@dimen/detail_view_text_size"
                android:textStyle="normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="Drop Point "
                android:textColor="@color/cost_details_screen_text_color"
                android:textSize="@dimen/detail_view_text_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/drop_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="406, 6th Cross, San Jose"
                android:textColor="@color/cost_details_screen_text_color"
                android:textSize="@dimen/detail_view_text_size"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Cab Arrival Time "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Trip Estimated Time "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Cab Number "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Driver Name "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="Estimated Cost of The Trip "
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/timeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/arrival_time"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/cost_details_screen_text_color"
                            android:textSize="@dimen/detail_view_text_size"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/estimated_time"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/cost_details_screen_text_color"
                            android:textSize="@dimen/detail_view_text_size"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/cab_number"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/cost_details_screen_text_color"
                            android:textSize="@dimen/detail_view_text_size"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/timeLayout"
                        android:src="@drawable/avathar_msb" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/trip_cost"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/cost_details_screen_text_color"
                    android:textSize="@dimen/detail_view_text_size"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Accept"
                android:layout_width="@dimen/accept_button_width"
                android:layout_height="@dimen/btn_heght"
                android:background="@drawable/accept_bg_rounded"
                android:text="Accept"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/Reject"
                android:layout_width="@dimen/accept_button_width"
                android:layout_height="@dimen/btn_heght"
                android:layout_marginLeft="50dp"
                android:background="@drawable/reject_bg_rounded"
                android:text="Reject"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/mProgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>

</ScrollView>
